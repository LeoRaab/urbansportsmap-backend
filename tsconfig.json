{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "baseUrl": "./",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "ES6",
    "typeRoots": [
      "./node_modules/@types"
    ],
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}